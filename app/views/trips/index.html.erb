<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <h1>Trips</h1>

  <%= link_to 'Create Trip Plan', new_trip_path, class: 'btn btn-primary' %>

  <div class="container-fluid">
    <div class="media-body">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th>Title</th>
            <th>Summary</th>
            <th>Actions</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @trips.each do |trip| %>
            <tr>
              <td><%= trip.title %></td>
              <td><%= trip.summary %></td>
              <td><%= link_to 'Show', trip, class: 'btn btn-mini btn-success' %></td>
              <td><%= link_to 'Edit', edit_trip_path(trip), class: 'btn btn-mini' %></td>
              <td><%= link_to 'Delete', trip, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


